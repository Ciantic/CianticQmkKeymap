{
    "name": "C++",
    "dockerFile": "Dockerfile",
    "extensions": ["ms-vscode.cpptools", "Ciantic.keymapceditor-vsc"],
    "runArgs": [
        // Comment out the next line to run as root instead. Linux users,
        // update Dockerfile with your user's UID/GID if not 1000.
        // "-u", "vscode",

        // Mounts the *BUILD* directory back to host computer
        "--mount",
        "type=bind,src=C:\\Source\\CandCPP\\CianticQmkKeymap\\build,dst=/qmk_firmware/.build",

        // Do NOT mount /qmk_firmware/.build/obj_ergodox_ez
        "--mount",
        "type=volume,dst=/qmk_firmware/.build/obj_ergodox_ez",

        // Do NOT mount /qmk_firmware/.build/obj_ergodox_ez_ciantic
        "--mount",
        "type=volume,dst=/qmk_firmware/.build/obj_ergodox_ez_ciantic",

        "--cap-add=SYS_PTRACE",
        "--security-opt",
        "seccomp=unconfined"
    ],
    // Mount the workspace keymap to keyboards/ergodox_ez/keymaps/ciantic
    "workspaceMount": "src=C:\\Source\\CandCPP\\CianticQmkKeymap\\keymap,dst=/qmk_firmware/keyboards/ergodox_ez/keymaps/ciantic,type=bind,consistency=cached",
    "workspaceFolder": "/qmk_firmware",
    "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
    }
}
